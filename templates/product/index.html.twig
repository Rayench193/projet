{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<div class="container">
    <h1>Produits </h1>
    {% include "layouts/flash_msg.html.twig" %} 
    <a class="btn btn-outline-primary" href="{{ path('app_product_new') }}">Create new</a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Descreption</th>
                <th>Price</th>
                <th>Stock</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.descreption | slice(0,60) }}...</td>
                <td>{{ product.price }}</td>
                <td>{{ product.stock }}</td>
                    <td>
                    <a class="btn btn-primary" href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                    <a class="btn btn-success" href ="{{path('app_product_edit', {'id': product.id})}}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   </div>
</div>
{% endblock %}
