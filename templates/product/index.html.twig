{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<div class="container">
    <h1>Produits </h1>
    {% include "layouts/flash_msg.html.twig" %} 
    <a class="btn btn-outline-primary" href="{{ path('app_product_new') }}">Create new</a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Auteur</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.auteur }}</td>
                
                <td>{{ product.price }}</td>
                <td>{{ product.stock }}</td>
                    <td>
                    <a class="btn btn-primary" href="{{ path('app_product_show', {'id': product.id}) }}">
                        Voir les d√©tails <i class="fa-solid fa-eye"></i>
                    </a>
                    <a class="btn btn-success" href ="{{path('app_product_edit', {'id': product.id})}}">
                        Modifier <i class="fa-solid fa-pen"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   </div>
</div>
{% endblock %}
