{% extends 'base.html.twig' %}

{% block title %}Sous Catégories{% endblock %}

{% block body %}
<div class="container">
    <h1>Sous Catégories </h1> <br><br>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Catégorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                <td>{{sub_category.id}}</td>
                <td>{{sub_category.name }}</td>
                <td>{{sub_category.category}}</td>
                <td>
                    <a  class="btn btn-success" href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}">
                        Voir les détails <i class="fa-solid fa-eye"></i>
                    </a>
                    <a  class="btn btn-primary" href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}">
                        edit <i class="fa-solid fa-pen"></i>
                    </a> 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('app_sub_category_new') }}">Create new</a>
</div>
{% endblock %}
